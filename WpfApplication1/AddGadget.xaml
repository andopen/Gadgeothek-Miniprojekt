<Window x:Class="WpfApplication1.AddGadget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Gadget hinzufügen" Height="322.341" Width="361.702">
    <Grid>
        <TextBlock Text="Name: " 
                   Height="30"
                   Width="100"
                   Margin="32,55,222,220" RenderTransformOrigin="0.535,1.727">
        </TextBlock>
        <TextBox Name="NamensEingabe" 
                 Text="{Binding EditedGadget.Name}"
                 Height="30"
                 Width="180"
                 Margin="137,55,37,206"/>
        <TextBlock Text="Hersteller: " 
                   Height="30"
                   Width="100"
                   Margin="32,90,222,185" RenderTransformOrigin="0.535,1.727">
        </TextBlock>
        <TextBox Name="Hersteller" 
                 Height="30"
                 Text="{Binding EditedGadget.Manufacturer}"
                 Width="180"
                 Margin="139,89,35,172"/>
        <TextBlock Text="Zustand: " 
                   Height="30"
                   Width="100"
                   Margin="32,125,222,150" RenderTransformOrigin="0.535,1.727">
        </TextBlock>
        <ComboBox Name="GadgetCondition" 
                 Height="30"
                 Width="180"                 
                 Margin="139,124,35,137">
            <ComboBoxItem IsSelected="True">New</ComboBoxItem>
            <ComboBoxItem>Good</ComboBoxItem>
            <ComboBoxItem>Damaged</ComboBoxItem>
            <ComboBoxItem>Waste</ComboBoxItem>
            <ComboBoxItem>Lost</ComboBoxItem>
        </ComboBox>
        <TextBlock Text="Preis: " 
                   Height="30"
                   Width="100"
                   Margin="32,160,222,115" RenderTransformOrigin="0.535,1.727">
        </TextBlock>
        <TextBox Name="Preis" 
                 KeyDown="Preis_KeyDown"
                 Text="{Binding EditedGadget.Price}"
                 Height="30"
                 Width="180"
                 Margin="139,159,35,102"/>
        <Button Name="Abbrechen"
                Click="AbbrechenButton_Click"
                Height="30"
                Width="100"
                Margin="32,205,222,36">
            <TextBlock Text="Abbrechen"/>
        </Button>
        <Button Name="GadgetErgänzen"
                Click="OkButton_Click"
                Height="30"
                Width="100"
                Margin="219,205,35,36">
            <TextBlock Text="OK"/>
        </Button>
    </Grid>
</Window>
