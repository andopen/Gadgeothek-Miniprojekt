<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid>
            <DataGrid Name="dgLoans" AutoGenerateColumns="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="KundenNr" Binding="{Binding CustomerId}"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding KundenName}"/>
                    <DataGridTextColumn Header="Reservation" Binding="{Binding Reservation}"/>
                    <DataGridTextColumn Header="Ausleihen" Binding="{Binding Ausleihen}"/>
                    <DataGridCheckBoxColumn Header="Hat überfällige" Binding="{Binding HatUb}"/>
                </DataGrid.Columns>
                <DataGrid.RowDetailsTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Details}" Margin="10"/>
                    </DataTemplate>
                </DataGrid.RowDetailsTemplate>
            </DataGrid>
        </Grid>
        <local:ReservationAusleihe/>
    </Grid>
</Window>
