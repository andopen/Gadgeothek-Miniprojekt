<UserControl x:Class="WpfApplication1.Kunde"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        >
    <Grid>
        <DataGrid  AutoGenerateColumns="False" ItemsSource="{Binding loans}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="KundenNr" Binding="{Binding CustomerId}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Customer.Name}"/>
                <DataGridTextColumn Header="Ausleihen" Binding="{Binding Gadget.Name}"/>
                <DataGridTextColumn Header="Zeit" Binding="{Binding OverDueDate}"/>
                <DataGridCheckBoxColumn IsReadOnly="True" Header="Hat überfällige" Binding="{Binding IsOverdue,Mode=OneWay}"/>
            </DataGrid.Columns>
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding loans}" Margin="50"/>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>
    </Grid>
</UserControl>
